<div class="col-12 col-sm-6 col-md-4 col-lg-3">
    <a href="/movie/{{id}}" class="text-decoration-none ">
        <div class="card film-card shadow-sm">
            {{#if imageUrl}}
                <img src="{{imageUrl}}" class="card-img-top img-fluid object-fit-cover" alt="Poster"/>
            {{else}}
                <div class="film-card-notImg d-flex align-items-center justify-content-center bg-white text-black text-capitalize "
                     style="height: 450px;">
                    <h5 class="text-center px-2">{{movieName}}</h5>
                </div>
            {{/if}}
        </div>
    </a>
</div>

